{
	"name": "zyle.css",
	"version": "0.5.0",
	"description": "Take off with a lightweight, responsive CSS framework",
	"homepage": "https://css.zylelabs.com/",
	"repository": "https://github.com/ZyleLabs/css",
	"author": "Gabriel Augusto <gabrielaugustodev@gmail.com>",
	"main": "css/zyle.min.css",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:sass && npm run build:compress && npm run build:docs-style",
		"build:watch": "sass -w scss/main.scss css/zyle.css --no-source-map",
		"build:sass": "sass scss/main.scss css/zyle.css",
		"build:compress": "sass scss/main.scss css/zyle.min.css --style=compressed",
		"build:docs-style": "sass scss/main.scss docs/src/css/zyle.min.css --style=compressed --no-source-map"
	},
	"devDependencies": {
		"sass": "^1.56.1"
	},
	"files": [
		"css",
		"scss",
		"README.md",
		"LICENSE"
	]
}
